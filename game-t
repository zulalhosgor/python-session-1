import random

# Define options for the game
options = ["Rock", "Paper", "Scissors"]

while True:
  # Get user input
  user_choice = input("Choose Rock, Paper, or Scissors (or 'q' to quit): ").lower()

  # Validate user input and handle quit option
  if user_choice == 'q':
    break
  elif user_choice not in options:
    print("Invalid choice. Please choose Rock, Paper, or Scissors.")
    continue

  # Generate computer's choice randomly
  computer_choice = random.choice(options)

  # Determine winner using a dictionary lookup
  win_lookup = {
    "rock": {"scissors": True},
    "paper": {"rock": True},
    "scissors": {"paper": True}
  }

  if user_choice == computer_choice:
    print("It's a tie!")
  elif win_lookup[user_choice].get(computer_choice):
    print("You win!")
  else:
    print("You lose.")

  # Print choices
  print("You chose:", user_choice)
  print("Computer chose:", computer_choice)

  # Ask to play again
  play_again = input("Play again? (y/n): ").lower()
  if play_again != 'y':
    break

print("Thanks for playing!")
